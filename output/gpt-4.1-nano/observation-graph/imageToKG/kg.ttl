@prefix owl:    <http://www.w3.org/2002/07/owl#> .
@prefix geo:    <http://www.opengis.net/ont/geosparql#> .
@prefix soma:   <http://www.ease-crc.org/ont/SOMA.owl#> .
@prefix dul:    <http://www.ontologydesignpatterns.org/ont/dul/DUL.owl#> .
@prefix rdfs:   <http://www.w3.org/2000/01/rdf-schema#> .
@prefix psr:    <https://w3id.org/psr-task#> .

# Define Environment
psr:Environment1 a psr:Environment .

# Components in the environment
psr:Fridge a psr:Appliance ;
    dul:hasComponent psr:FridgeComponent .

psr:FridgeComponent a psr:Component ;
    dul:hasLocation psr:FridgeLocation .

psr:Table a psr:Furniture ;
    dul:hasComponent psr:TableComponent .

psr:TableComponent a psr:Component ;
    dul:hasLocation psr:TableLocation .

psr:KitchenCounter a psr:Object ;
    dul:hasComponent psr:CounterComponent .

psr:CounterComponent a psr:Component ;
    dul:hasLocation psr:CounterLocation .

# Locations
psr:FridgeLocation a soma:Location .

psr:TableLocation a soma:Location .

psr:CounterLocation a soma:Location .

# Link locations to environment
dul:hasComponent psr:Environment1 psr:FridgeComponent, psr:TableComponent, psr:CounterComponent .

# Affordances for components
psr:RefrigeratorDoor a psr:Object, psr:Component ;
    rdfs:label "Refrigerator Door"@en ;
    psr:hasAffordance soma:Opening .

psr:CabinetDoor a psr:Object, psr:Component ;
    rdfs:label "Cabinet Door"@en ;
    psr:hasAffordance soma:Opening .

psr:Drawer a psr:Object, psr:Component ;
    rdfs:label "Drawer"@en ;
    psr:hasAffordance soma:Pulling, soma:PuttingDown .

psr:RefrigeratorDoor psr:hasAffordance soma:Opening .
psr:CabinetDoor psr:hasAffordance soma:Opening .
psr:Drawer psr:hasAffordance soma:Pulling, soma:PuttingDown .

# Objects on the kitchen counter
psr:Jug a psr:Object ;
    dul:hasLocation psr:CounterLocation .

psr:Box a psr:Object ;
    dul:hasLocation psr:CounterLocation .

psr:Glass a psr:Object ;
    dul:hasLocation psr:CounterLocation .

psr:PackagedFood a psr:Object ;
    dul:hasLocation psr:CounterLocation .

# Note: All objects and locations are associated with the environment and specific locations as per ontology.