@prefix owl:    <http://www.w3.org/2002/07/owl#> .
@prefix geo:    <http://www.opengis.net/ont/geosparql#> .
@prefix soma:   <http://www.ease-crc.org/ont/SOMA.owl#> .
@prefix dul:    <http://www.ontologydesignpatterns.org/ont/dul/DUL.owl#> .
@prefix rdfs:   <http://www.w3.org/2000/01/rdf-schema#> .
@prefix psr:    <https://w3id.org/psr-task#> .
@prefix ex:     <https://example.org/data/> .
@prefix dol:    <http://www.ontologydesignpatterns.org/ont/dul/DUL.owl#> .

############################
# Environment
############################

psr:Kitchen a owl:Class, psr:Environment ;
    rdfs:label "Kitchen"@en ;
    rdfs:comment "A kitchen environment containing various components and objects."@en .

ex:Environment1 a psr:Environment ;
    rdfs:label "Kitchen Environment"@en .

############################
# Components
############################

ex:Refrigerator a owl:Class, psr:Component ;
    rdfs:label "Refrigerator"@en ;
    rdfs:comment "A refrigerator component located in the kitchen."@en .

ex:RefrigeratorInstance a psr:Component ;
    a ex:Refrigerator ;
    rdfs:hasLocation ex:RefrigeratorLocation .

ex:RefrigeratorLocation a psr:CurrentLocation ;
    rdfs:hasLocation ex:KitchenCorner .

ex:Counter a owl:Class, psr:Furniture ;
    rdfs:label "Counter"@en ;
    rdfs:comment "A kitchen counter."@en .

ex:CounterInstance a psr:Furniture ;
    a ex:Counter ;
    rdfs:hasLocation ex:CounterLocation .

ex:CounterLocation a psr:CurrentLocation ;
    rdfs:hasLocation ex:CenterOfKitchen .

ex:Table a owl:Class, psr:Furniture ;
    rdfs:label "Dining Table"@en ;
    rdfs:comment "A dining table in the kitchen."@en .

ex:TableInstance a psr:Furniture ;
    a ex:Table ;
    rdfs:hasLocation ex:TableLocation .

ex:TableLocation a psr:CurrentLocation ;
    rdfs:hasLocation ex:CenterOfRoom .

ex:DiningChair a owl:Class, psr:Furniture ;
    rdfs:label "Dining Chair"@en ;
    rdfs:comment "A chair for dining."@en .

ex:ChairInstance a psr:Furniture ;
    a ex:DiningChair ;
    rdfs:hasLocation ex:ChairLocation .

ex:ChairLocation a psr:CurrentLocation ;
    rdfs:hasLocation ex:AroundTable .

############################
# Objects
############################

ex:BoxOfJelly a owl:Class, psr:Object ;
    rdfs:label "Box of Jelly"@en ;
    rdfs:comment "A box of Jello on the counter."@en .

ex:BoxOfJellyInstance a psr:Object ;
    a ex:BoxOfJelly ;
    rdfs:hasLocation ex:JellyBoxLocation .

ex:JellyBoxLocation a psr:CurrentLocation ;
    rdfs:hasLocation ex:CounterTop .

ex:BottleOfWater a owl:Class, psr:Object ;
    rdfs:label "Bottle of Water"@en ;
    rdfs:comment "A bottle of water on the table."@en .

ex:BottleOfWaterInstance a psr:Object ;
    a ex:BottleOfWater ;
    rdfs:hasLocation ex:WaterBottleLocation .

ex:WaterBottleLocation a psr:CurrentLocation ;
    rdfs:hasLocation ex:TableSurface .

############################
# Affordances
############################

ex:OpenRefrigerator a soma:Opening ;
    rdfs:label "Opening Refrigerator"@en .

ex:CloseRefrigerator a soma:Closing ;
    rdfs:label "Closing Refrigerator"@en .

ex:PickUpJelly a soma:PickingUp ;
    rdfs:label "Picking Up Jello"@en .

ex:PutDownJelly a soma:PuttingDown ;
    rdfs:label "Putting Down Jello"@en .

ex:HoldWaterBottle a soma:Holding ;
    rdfs:label "Holding Water Bottle"@en .

############################
# Relations
############################

# The environment has components
ex:Kitchen dul:hasComponent ex:RefrigeratorInstance, ex:CounterInstance, ex:TableInstance, ex:ChairInstance .

# Components and objects and locations
ex:RefrigeratorInstance dul:hasLocation ex:RefrigeratorLocation .
ex:CounterInstance dul:hasLocation ex:CounterLocation .
ex:TableInstance dul:hasLocation ex:TableLocation .
ex:ChairInstance dul:hasLocation ex:ChairLocation .

ex:BoxOfJellyInstance dul:hasLocation ex:JellyBoxLocation .
ex:BottleOfWaterInstance dul:hasLocation ex:WaterBottleLocation .

# Locations within the environment
ex:RefrigeratorLocation geo:sfWithin ex:Refrigerator .
ex:CounterLocation geo:sfWithin ex:Counter .
ex:TableLocation geo:sfWithin ex:Table .
ex:ChairLocation geo:sfWithin ex:DiningChair .

ex:JellyBoxLocation geo:sfContains ex:BoxOfJelly .
ex:WaterBottleLocation geo:sfContains ex:BottleOfWater .

# Affordances of components and objects
ex:Refrigerator dol:hasFunction ex:OpenRefrigerator, ex:CloseRefrigerator .
ex:BoxOfJelly dol:hasFunction ex:PickUpJelly, ex:PutDownJelly .
ex:BottleOfWater dol:hasFunction ex:HoldWaterBottle .